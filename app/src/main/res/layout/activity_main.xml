<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/topCenter"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="#333333"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/center"
        android:layout_marginBottom="54dp" />

    <ImageView
        android:id="@+id/topEnd"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="#333333"
        app:layout_constraintStart_toEndOf="@id/topCenter"
        app:layout_constraintBottom_toTopOf="@id/centerEnd"
        android:layout_marginBottom="54dp"
        android:layout_marginStart="54dp"/>

    <ImageView
        android:id="@+id/topStart"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="#333333"
        app:layout_constraintBottom_toTopOf="@id/centerStart"
        app:layout_constraintEnd_toStartOf="@id/topCenter"
        android:layout_marginBottom="54dp"
        android:layout_marginEnd="54dp" />
    
    
    <ImageView
        android:id="@+id/center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="#333333"
        android:layout_height="56dp"
        android:layout_width="56dp"/>

    <ImageView
        android:id="@+id/centerEnd"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="#333333"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/center"
        android:layout_marginStart="54dp"/>

    <ImageView
        android:id="@+id/centerStart"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="#333333"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/center"
        android:layout_marginEnd="54dp" />


    <ImageView
        android:id="@+id/bottomCenter"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="#333333"
        app:layout_constraintTop_toBottomOf="@id/center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="54dp"/>

    <ImageView
        android:id="@+id/bottomEnd"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="#333333"
        app:layout_constraintTop_toBottomOf="@id/centerEnd"
        app:layout_constraintStart_toEndOf="@id/bottomCenter"
        android:layout_marginTop="54dp"
        android:layout_marginStart="54dp"/>

    <ImageView
        android:id="@+id/bottomStart"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:background="#333333"
        app:layout_constraintEnd_toStartOf="@id/bottomCenter"
        app:layout_constraintTop_toBottomOf="@id/centerStart"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="54dp"/>

    <Button
        android:id="@+id/reset"
        android:text="Reset"
        android:backgroundTint="@color/teal_700"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/bottomCenter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="70dp"/>

  </androidx.constraintlayout.widget.ConstraintLayout>